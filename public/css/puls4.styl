				.estrellita
					background amarillo url(../imagenes/strips-bold.png)
					font-weight bold 
					border-top-left-radius 20px
					border-bottom-right-radius 20px
					color rojomas
					padding 0.5em 1em
					text-decoration none
					

					&:after
						color rojomas
						content "\e600"
						font-family "iconitos"
						font-size 1.1em

			.votos
				float left

				.down
				.up
					text-decoration none
					&:before
						font-family "iconitos"
						font-size 1.5em
						vertical-align middle
				.down
					color red
					&:before
						content "\e602"

				.up
					color green
					&:before
						content "\e601"

		.descripcion
			&.extended
				.detalles
					height auto
					padding-bottom 20px

			.detalles
				height 160px
				margin-left 130px

				.back
					float right
					background amarillo url(../imagenes/strips-bold.png)
					border-top-left-radius 10px
					border-bottom-right-radius 10px
					color rojomas
					padding 0.5em 1em
					text-decoration none


				.autor
					margin 0.5em 0 2em 0

				.fecha
					float right
					margin 0 1em 0 0
				


				.tag
					background amarillo url(../imagenes/strips-bold.png)
					color rojomas
					padding 0.5em 1em
					text-decoration none
					border-top-left-radius 20px
					border-bottom-right-radius 20px

					&:after
						font-family: 'iconitos';
						margin 4px
						font-size 20px
						content "\e603"
				.tag-ex
					background amarillo url(../imagenes/strips-bold.png)
					border-top-left-radius 10px
					border-bottom-right-radius 10px
					font-style bold
					color rojomas
					padding 0.5em 1em
					text-decoration none

					&:after
						font-family: 'iconitos';
						margin 4px
						font-size 20px
						content "\e603"

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0

			.imagen
				float left

				img
					
					height:160px
					-webkit-transition 0.5s
					-moz-transition 0.5s 
					border-radius 3px
					vertical-align top
					width 120px 
					vertical-align top
					

			.imagen:hover
				img
					-webkit-transform:scale(1.7)
					-moz-transform:scale(1.7);

@media screen and (min-width: 768px)

	header
		.titular
			

			.publicar
				font-size 1.1em
				padding-left 3em
				position relative

				&:before
					left 0
					font-size 2.5em
					position absolute
					top -10px

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%


@media screen and (max-width: 768px)

	header
		.logo
			.publicar
				font-size 0.25em
