.posts
	padding 0.5em
	margin 0 1px 0 1%
	height 800px


	.post

		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color #7a7a7a
		margin-bottom 1em
		
		

		.acciones
			border-top 3px solid amarillo
			padding 0.5em
			overflow hidden

			.datos
				float right

				textarea
					top 0
					width 220px


				.comentarios
					
					
					color white
					
					padding 10px
					color amarillo
					text-decoration none
					border-top-left-radius 10px
					border-bottom-right-radius 10px
